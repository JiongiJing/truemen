/* pages/register/phone-register/phone-register.wxss */
.container {
  padding: 20rpx;
}

.form-container {
  width: 100%;
  margin-top:50%;
  display: flex;
  flex-direction: column;
  justify-content: center; 
  /* align-items: center; */
}

.input-group {
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.input-field {
  border: 1px solid;
  border-radius: 30rpx;
  padding: 25rpx;
  margin-left: 5%;
  margin-right: 5%;
  height: 50rpx;
  width: auto;
}
.flex{
  display: flex;
}

.valid {
  background-color: #1aad19; /* 合法时的背景颜色 */
}

.invalid {
  background-color: #fff;
}
.input-border-phone-color {
  border: 1px solid #F3DEDE; 
}
.input-border-password-color {
  border: 1px solid #FFF7DC; 
}
.input-border-password-again-color {
  border: 1px solid #CAE0ED; 
}
.description {
  font-size: 24rpx;
  color: #6F6C90;
  margin-top: 10rpx;
  padding-left: 7%;
}

.checkbox-container {
  margin-bottom: 20rpx;
  margin-right: 5%;
  margin-left: 5%;
  width: auto;
}

.link{
  color:#4A3AFF;
}

.register-button {
  width: 284rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #002FA7;
  color: #fff;
  border-radius: 4rpx;
}
.eye-icon {
  position: relative;
  width: 56rpx;
  height: 56rpx;
  z-index: 10;
}
.register-button:disabled {
  opacity: 0.5;
}