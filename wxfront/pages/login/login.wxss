.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 30rpx;
}

.form {
  display: flex;
  flex-direction: column;
  width: 80%;
}

.input-group {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
  margin-bottom: 15rpx;
}

.iconfont {
  margin-right: 10rpx;
}

.login-button {
  background-color: #1aad19;
  color: white;
  margin-top: 20rpx;
  border-radius: 5rpx;
}