/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.logo {
  width: 300rpx;
  height: 300rpx;
  margin-top: 200rpx;
}

.login-text {
  font-size: 40rpx;
  color: #3B4144;
  margin: 50rpx 0;
  margin-bottom: 20rpx;
}
.phone{
  font-size: 40rpx;
  color: #3B4144;
  margin-bottom: 20rpx;
}

.form {
  display: flex;
  flex-direction: column;
  width: 80%;
}
.group-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.login-btn {
  width: 600rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin-bottom: 30rpx;
}
.wechat-btn {
  background-color: #4AC96F;
  color: white;
}

.phone-btn {
  background-color: #3190E8;
  color: white;
}
.link{
  color:#4A3AFF;
}
.input-group {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
  margin-bottom: 15rpx;
}
.text-link {
  color: black; /* 设置字体颜色为黑色 */
  font-size: small; /* 设置字体大小 */
  text-decoration: none; /* 移除下划线 */
  margin-bottom: 10rpx;
}

.iconfont {
  margin-right: 10rpx;
}

.login-button {
  background-color: #1aad19;
  color: white;
  margin-top: 20rpx;
  border-radius: 5rpx;
}