/* pages/myself/edit-myself.wxss */
@import "/utils/common-style.wxss";
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  width: 100vw;
  overflow-y: auto !important;
  overflow-x: hidden
}
.avatar-container {
  width: 750rpx; /* 固定宽度 */
  height: 354rpx; /* 固定高度 */
  padding: 80rpx 130rpx 80rpx 130rpx; /* 上、右、下、左四个方向的内边距 */
  border: 1rpx solid red;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  box-sizing: border-box; /* 确保边框和内边距包含在总宽度和高度内 */
}
.edit-name-container {
  background-color: #C8DAEA;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  width: 750rpx;
  height: 202rpx;
  padding: 32rpx 0px 32rpx 0px;
  /* gap: 16rpx; */
  box-sizing: border-box;


}

.name-label {
  color: #002FA7;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  width: Fixed (375px)px;
  height: 48rpx;
  padding: 0px 32rpx 0px 32rpx;
  gap: 28rpx;
  font-family: PingFang SC;
  font-size: 34rpx;
  font-weight: 400;
  line-height: 47.6rpx;
  text-align: left;
}

.input-container {
  background-color: white;
  border: 1rpx solid blue;
  width: 600rpx;
  position: relative;
  margin-bottom: 20rpx;
  width: Fixed 686rpx;
  height: 74rpx;
  padding: 20rpx 0px 20rpx 0px;
  border-radius: 12rpx;
  border: 2rpx;
  box-sizing: border-box;
  width: Fixed (311px)px;



}

.name-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  color: black;
  width: Fixed (311px)px;
  font-family: PingFang SC;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 33.6rpx;
  text-align: left;


}

.character-count {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: blue;
  font-size: 24rpx;
}

.avatar {
  width: 194rpx; /* 固定宽度 */
  height: 194rpx; /* 固定高度 */
  border: 1rpx solid red;
}